    "lib": [
      "ESNext"
    ],
    "module": "CommonJS",
    "outDir": "dist",
    "strict": true,
    "target": "ESNext",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
